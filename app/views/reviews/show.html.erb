<% content_for :page_title, @review.title %>

<h1><%= @review.title %></h1>
<h2><%= @review.restaurant %></h2>
<h3><%= @review.cuisine %></h3>

<div class="score">
    <%= @review.score %> / 10
</div>

<% if @review.ambiance.present? %>
    <div class="ambiance">
        Ambiance: <%= @review.ambiance %>
    </div>
<% end %>

<div class="price">
    Price: <%= @review.price %>
</div>

<div class="body">
    <%= simple_format @review.body %>
</div>

<div class="address">
    <%= @review.address %>
</div>

<div class="actions">
    <%= link_to "Edit review", edit_review_path(@review) %>
    <%= button_to "Delete this review", review_path(@review), method: :delete, onclick: "return confirm('Are you sure?')" %>
</div>